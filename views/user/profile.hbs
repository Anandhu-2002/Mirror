 <section class="h-100 profilebg">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img src="/profilephotos/default-profile.png"
                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px; z-index: 1">
                {{#if verified}}
               <button class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;" disabled>
                Verifed
              </button>
              <a href="/uploadPhoto" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;">
               Upload Photo
              </a>
              {{else}}
              {{#if pending}}
                <button class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;" disabled>
                Pending
              </button>
              {{else}}
              <a href="/userverification/{{user.Username}}" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;">
                Verify
              </a>
              {{/if}}
           {{/if}}

            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>{{user.FirstName}} {{user.LastName}}</h5>
              <p>{{user.Username}}</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5">{{photocount}}</p>
                <p class="small text-muted mb-0">Photos</p>
              </div>
              <a href="/followers/{{user.Username}}" class="no-link">
              <div class="px-3">
                <p class="mb-1 h5">{{followerscount}}</p>
                <p class="small text-muted mb-0">Followers</p>
              </div>
              </a>
              <a href="/following/{{user.Username}}" class="no-link">
             <div>
                <p class="mb-1 h5">{{followingcount}}</p>
                <p class="small text-muted mb-0">Following</p>
              </div>
              </a>
 
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">Web Developer</p>
                <p class="font-italic mb-1">Lives in India</p>
                <p class="font-italic mb-0">Photographer</p>
              </div>
            </div>
            <div class="cardsdiv">
              {{#each photos}}
              <div class="carddiv">
                <a href="/editphoto/{{this._id}}">
                  <img src="/photos/{{this._id}}.jpg"
                  class="img">
                </a>
              </div>
              {{/each}}

          </div>
        </div>
      </div>
    </div>
  </div>
</section>