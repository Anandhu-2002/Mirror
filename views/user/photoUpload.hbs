<section>
<form  method="POST" enctype="multipart/form-data" action="/photos">
    <div class="upload-container">
        <div class="image-upload">
            <div class="image">
                <label for="img">
                  
                        <img  id="imgView">
                        
                        
                        <i class="fa-solid fa-cloud-arrow-up fa-beat" id="up"><input type="file"  id="img" name="Image" required="" onchange="viewImg(event)" style="display: none; visibility: hidden;"></i>
                        
                    </label>
            </div>
            <div class="details">
                <div class="wrapper">
                    <div class="input-data">
                        <input type="text" name="title" required>
                        <label for="">Title</label>
                    </div>
                </div>
                <div class="wrapper">
                    <div class="input-data">
                        <input type="text" name="description" required>
                        <label for="">Description</label>
                    </div>
                </div>
                <div class="wrapper">
                    <div class="input-data">
                        <input type="text" name="camdet" required>
                        <label for="">Camera used</label>
                    </div>
                </div>
                <div class="btn">
                    <button type="submit" class="">Upload</button>
                    
                </div>
            </div>
        </div>
    </div>
    </form>

</section>
<script>
            function viewImg(){
            document.getElementById("up").classList.remove("fa-solid","fa-cloud-arrow-up","fa-beat")
            document.getElementById("imgView").classList.add("upimg")
            document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
    }
</script>