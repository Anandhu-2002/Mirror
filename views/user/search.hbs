<section>

    <div class="input-group">
  
    <input type="text" id="uname" class="form-control rounded"  placeholder="Search" oninput="search()"/>
    
  
    </div>
    <div class="usermaindiv">


    </div>

</section>
<script>
  function search(){

     var uname=document.getElementById('uname').value;
     var outerdiv=document.querySelector('.usermaindiv');
     outerdiv.innerHTML="";
     if(uname!=""){
     $.ajax({
      url:'/Search',
      data:{
        uname:uname
        },
      method:'post',
      success:(res)=>{
        let div=document.createElement('div');
        console.log(res);
        let content;
       
        for(i=0;i<res.length;i++){
              div.classList.add('userouterdiv');
              content='<div class="userprofilediv"><div class="usernamediv"><a class="no-link" href="/viewuserprofile/'+res[i].Username+'">'+res[i].Username+'</a></div></div>';
              div.innerHTML=content;
              outerdiv.appendChild(div);
        }
        
      }
    })
     }
  }
</script>

