<script>
  function search(){

     var uname=document.getElementById('uname').value;
     var outerdiv=document.querySelector('.outerdiv');
     outerdiv.innerHTML="";
     if(uname!=""){
     $.ajax({
      url:'/Search',
      data:{
        uname:uname
        },
      method:'post',
      success:(res)=>{
        let div=document.createElement('div');
        console.log(res);
        let content;
       
        for(i=0;i<res.length;i++){
              div.classList.add('searchdiv');
              content='<div class="pro"><div class="div2"><a class="no-link" href="/viewuserprofile/'+res[i].Username+'">'+res[i].Username+'</a></div></div>';
              div.innerHTML=content;
              outerdiv.appendChild(div);
        }
        
      }
    })
     }
  }
</script>

