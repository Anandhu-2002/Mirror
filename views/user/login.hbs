<section class="loginbg">


  <div class="loginmain">


    <div class="logincontainer">

   
        <form action="/login" method="POST">
          {{#if eror}}
          <p class="error text">Invalid username or password</p>
          {{/if}}
          <div class="user-box">
            <input type="email"  name="Email" class="logininput">
            <label>Username</label>
          </div>
          <div class="user-box">
            <input type="password" name="Password" class="logininput">
            <label>Password</label>
          </div>
          
          

          <button type="submit" class="btn-login">Login</button>
          <span>OR</span><br>
          <div class="links">
          <a href="/resetpassword" class="forgot">forgot password?</a>
          <a href="/signup" class="signup">signup?</a>
          </div>
        </form>


    </div>
  </div>

</section>